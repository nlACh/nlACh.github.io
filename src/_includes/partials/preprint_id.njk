<article class="wrapper layout-grid content-highlight">
{% set img_path = item.data.image %}
<h6 class="page-header layout-span | content-main flow">{{ item.data.title }}</h6>
<div class="layout-list">

{% if item.data.authors %}
<p>{{ item.data.authors }}</p>
{% endif %}

{% if item.data.pub_year %}
<p>{{ item.data.pub_year }}</p>
{% endif %}

{% if item.data.preprint_addr %}
<p>Available <a href="{{ item.data.preprint_addr }}">here</a></p>
{% endif %}

{% if item.data.alt_available %}
<p>Alternate version available <a href="{{ item.data.alt_addr }}">here</a></p>
{% endif %}

</div>
<div class="layout-aside | content-main flow">
  <img src = "{{ img_path }}" alt="image goes here" width="100">
</div>
<div class="layout-span | content-main flow">
  <p><b>Abstract</b></p>
  Abstract goes here
</div>
<!-- <div class="content-main flow">
  {{ content | safe }}
</div>
-->
</article>