<article class="wrapper layout-grid content-highlight">
{% set img_path = item.dta.image %}
<h6 class="page-header layout-span | content-main flow">{{ item.data.title }}</h6>
<div class="layout-list">
{% if item.data.authors %}
<p>{{ item.data.authors }}</p>
{% endif %}
{% if item.data.event %}
<p>{{ item.data.event }}</p>
{% endif %}
</div>
<div class="layout-aside | content-main flow">
  <img src = "{{ img_path }}" alt="image goes here" width="300" height="200">
</div>
<div class="layout-span | content-main flow">
  <p><b>Abstract</b></p>
  Abstract goes here
</div>
