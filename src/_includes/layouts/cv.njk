{% extends "layouts/base.njk" %}

{% block content %}
<section class="page-section wrapper">
  <header class="page-header-section cv-header">
    <h1>{{ title }}</h1>
    <div class="cv-download">
      <a href="/media/NPaul_CV.pdf" download="Nilayan_Paul_CV.pdf" class="btn btn-primary">
        <span>PDF Version</span>
      </a>
    </div>
  </header>

  <article class="cv-content">
    {# Personal Information #}
    <section class="cv-section">
      <h2>Information:</h2>
      <div class="cv-entry cv-info-item">
      <strong><h3> {{ config.author.name }}</h3></strong>
      <strong>Senior Research Fellow</strong>
      <p class="cv-details">Department of Electronic Science, University of Calcutta, India <br/>
      92 A. P. C. Road, Kolkata 700009</p>
      <p class="cv-details"><strong>Supervisor:</strong> Prof. Sanatan Chattopadhyay</p>
      </div>
    </section>

    {# Research Interests #}
    <section class="cv-section">
      <h2>Research Interests:</h2>
      <div class="cv-entry cv-info-item">
      <ul class="cv-list">
        <li>Quantum transport</li>
        <li>Non-Equilibrium Green's Function (NEGF) techniques</li>
        <li>Nanoscale device modeling</li>
        <li>Devices for quantum information processing</li>
        <li>Beyond Moore devices</li>
        <li>Semiconductor device fabrication</li>
      </ul>
      </div>
    </section>

    {# Skills & Expertise #}
    <section class="cv-section">
      <h2>Skills & Expertise</h2>
      <div class="cv-skills">
        <div class="cv-skill-category">
          <h3>Theoretical & Computational</h3>
          <ul class="cv-list">
            <li>Nanoscale device modeling with NEGF</li>
            <li></li>
          </ul>
        </div>
        <div class="cv-skill-category">
          <h3>Experimental</h3>
          <ul class="cv-list">
            <li>Thin film fabrication by VLS</li>
            <li>Electron beam lithography</li>
            <li>Device characterization (electrical + physical)</li>
          </ul>
        </div>
      </div>
    </section>

    {# Fellowships & Awards #}
    <section class="cv-section">
      <h2>Fellowships & Awards</h2>
      <div class="cv-entry cv-info-item">
        <ul class="cv-list">
        <li> <strong> Best paper presentation award: ICLED 2024 </strong> </li>
        <li><strong>JRF</strong>
          <p class="cv-details">University Grants Commission, India</p>
        </li>
      </div>
    </section>

    {# Publications Summary #}
    <section class="cv-section">
      <h2>List of Publications (recent):</h2>
      <div class="cv-pub-summary">
        <div class="cv-pub-count">
          <span class="count">{{ collections.publication_id | length }}</span>
          <span class="label">Journal Papers</span>
        </div>
        <div class="cv-pub-count">
          <span class="count">{{ collections.conf_id | length }}</span>
          <span class="label">Conference Papers</span>
        </div>
        <div class="cv-pub-count">
          <span class="count">{{ collections.preprint_id | length }}</span>
          <span class="label">Preprints</span>
        </div>
      </div>
      <p class="cv-pub-link"><a href="/research/">View full publication details with abstracts →</a></p>

      {# Journal Publications - Concise Numbered List #}
      <h3>Publications in peer reviewed journals</h3>
      <ol class="cv-publications-numbered">
        {% for item in collections.publication_id %}
        <li class="cv-pub-entry-concise">
          <span class="cv-pub-title-concise">{{ item.data.title }}</span>
          <span class="cv-pub-meta">{{ item.data.authors }} <br/> <em>{{ item.data.jorunal }}</em>{% if item.data.pub_year %}, {{ item.data.pub_year }}{% endif %}</span>
          {% if item.data.doi %}
          <span class="cv-pub-doi-concise">DOI: {{ item.data.doi }}</span>
          <span class="cv-pub-doi-concise"><a href="{{ item.data.doi }}" target="_blank" rel="noopener noreferrer">Link to Version of Record</a></span>
          {% endif %}
        </li>
        {% endfor %}
      </ol>

      {# Conference Papers - Concise Numbered List #}
      <h3>Peer reviewed conference papers</h3>
      <ol class="cv-publications-numbered">
        {% for item in collections.conf_id %}
        <li class="cv-pub-entry-concise">
          <span class="cv-pub-title-concise">{{ item.data.title }}</span>
          <span class="cv-pub-meta">{{ item.data.authors }} <br/> {{ item.data.event }}</span>
          {% if item.data.doi %}
          <span class="cv-pub-doi-concise">DOI: {{ item.data.doi }}</span>
          <span class="cv-pub-doi-concise"><a href="{{ item.data.doi }}" target="_blank" rel="noopener noreferrer">Link to proceedings</a></span>
          {% endif %}
        </li>
        {% endfor %}
      </ol>

      {# Preprints - Concise Numbered List #}
      <h3>Preprints</h3>
      <ol class="cv-publications-numbered">
        {% for item in collections.preprint_id %}
        <li class="cv-pub-entry-concise">
          <span class="cv-pub-title-concise">{{ item.data.title }}</span>
          <span class="cv-pub-meta">{{ item.data.authors }}{% if item.data.pub_year %} • {{ item.data.pub_year }}{% endif %}</span>
          {% if item.data.preprint_addr %}
          <span class="cv-pub-doi-concise"><a href="{{ item.data.preprint_addr }}" target="_blank" rel="noopener noreferrer">Link</a></span>
          {% endif %}
        </li>
        {% endfor %}
      </ol>
    </section>
    {# Teaching Activities #}
    <section class="cv-section">
      <h2>Teaching:</h2>
      <div class="cv-info-item">
      <h3>TA for ESP-101 lab.</h3>
      I teach basic semiconductor device characterization
      </div>
    </section>
    {# Research Profiles #}
    <section class="cv-section">
      <h2>Research Profiles:</h2>
      <ul class="cv-list cv-info-item">
        <li><a href="{{ config.social.googleScholar }}" target="_blank" rel="noopener noreferrer">Google Scholar</a></li>
        <li><a href="{{ config.social.researchGate }}" target="_blank" rel="noopener noreferrer">ResearchGate</a></li>
      </ul>
    </section>
  </article>
</section>
{% endblock %}
