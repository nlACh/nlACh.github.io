{% extends "layouts/base.njk" %} 

{% block content %}
  <article class="wrapper layout-grid">
    <h1 class="page-header layout-span">{{ title }}</h1>
    <div class="layout-span | content-main flow">
      {% if tags %}
        <h4>Tags: </h4>     
          {% for item in tags %}
            <a href="/tag/{{ item | slug }}/">{{ item }}</a>
          {% endfor %}
        
      {% endif %}
      {{ content | safe }}
    </div>
  </article>
{% endblock %}